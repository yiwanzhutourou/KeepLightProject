.card-container {
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.first-line-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.second-line-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.content-container {
    width: 540rpx;
    margin-left: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.card-title {
    display: -webkit-box;
    font-size: 35rpx;
    font-weight: 60;
    color: #333;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.card-content {
    display: -webkit-box;
    font-size: 26rpx;
    color: #999;
    margin-top: 10rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.card-img {
    width: 120rpx;
    height: 120rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.book-title {
    font-size: 26rpx;
    color: #666;
    margin-right: 30rpx;
}
