.home-card-container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.card-img {
    width: 80rpx;
    height: 120rpx;
    margin-right: 20rpx;
}

.card-content-container {
    width: 380rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.card-content-container-no-img {
    width: 460rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.card-title {
    width: 100%;
    font-size: 36rpx;
    font-weight: 40;
    color: #333;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.card-content {
    width: 100%;
    font-size: 24rpx;
    color: #666;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.card-date {
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
}
