@import "SearchUserItem.wxss";

.book-container {
    width: 100%;
    height: 180rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
}

.book-detail-container {
    width: 440rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 15rpx;
}

.book-left-container {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin-left: 25rpx;
}

.book-title {
    font-size: 35rpx;
    color: #333;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.book-author {
    font-size: 25rpx;
    color: #666;
    margin-top: 10rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.book-publisher {
    font-size: 25rpx;
    color: #666;
    margin-top: 5rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.book-pic {
    width: 120rpx;
    height: 120rpx;
}

.show-users-button {
    font-size: 25rpx;
    color: #f8b62d;
    margin-right: 25rpx;
}

.show-users-button-hover {
    font-size: 25rpx;
    color: rgba(248, 182, 45, 0.6);
}
