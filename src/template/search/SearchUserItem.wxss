.search-user-container {
    width: 100%;
    height: 140rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background: #fafafa;
    border-bottom: 1rpx solid #eee;
}

.maininfo-container {
    width: 530rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    margin-left: 50rpx;
}

.action-container {
    width: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 25rpx;
}

.detail-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 30rpx;
}

.search-address-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    margin-top: 12rpx;
}

.user-nickname {
    font-size: 30rpx;
    color: #333;
}

.distance-text {
    max-width: 200rpx;
    font-size: 20rpx;
    color: #8a8a8a;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.distance-text2 {
    max-width: 200rpx;
    font-size: 20rpx;
    color: #8a8a8a;
    padding-left: 8rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.user-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: 1rpx solid #bbb;
    -webkit-box-shadow: 0rpx 0rpx 5rpx 0rpx #eee;
    -moz-box-shadow: 0rpx 0rpx 5px 0rpx #eee;
    box-shadow: 0rpx 0rpx 5rpx 0rpx #eee;
}

.borrow-book-button {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 25rpx;
    color: #fff;
    background: #f8b62d;
}

.borrow-book-button-hover {
    background: rgba(248, 182, 45, 0.6);
}
