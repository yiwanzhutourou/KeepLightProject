.search-user-container {
    width: 100%;
    height: 160rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background: #fafafa;
    border-bottom: 1rpx solid #eee;
}

.maininfo-container {
    width: 650rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    margin-left: 50rpx;
}

.detail-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 30rpx;
}

.user-nickname {
    font-size: 30rpx;
    color: #333;
}

.distance-text {
    max-width: 400rpx;
    font-size: 20rpx;
    color: #666;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-top: 14rpx;
}

.user-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: 1rpx solid #bbb;
    -webkit-box-shadow: 0rpx 0rpx 5rpx 0rpx #eee;
    -moz-box-shadow: 0rpx 0rpx 5px 0rpx #eee;
    box-shadow: 0rpx 0rpx 5rpx 0rpx #eee;
}
