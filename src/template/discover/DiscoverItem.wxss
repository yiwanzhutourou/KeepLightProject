.book-user-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.book-user-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    border: 2rpx solid #eee;
    margin-left: 40rpx;
}

.book-user-time-container {
    width: 280rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    margin-left: 20rpx;
}

.book-user-nickname {
    font-size: 24rpx;
    color: #666;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.book-date {
    font-size: 20rpx;
    color: #999;
}

.book-count-container {
    width: 280rpx;
    margin-left: 30rpx;
    margin-right: 40rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.book-container {
    width: 100%;
    height: 340rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.book-type-title {
    color: #999;
    font-size: 24rpx;
    margin-top: 10rpx;
}

.book-first-line-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.book-img {
    width: 120rpx;
    height: 120rpx;
    margin-left: 30rpx
}

.book-content-container {
    width: 550rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 15rpx;
    margin-right: 30rpx;
}

.book-title {
    font-size: 35rpx;
    color: #333;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.book-author {
    font-size: 25rpx;
    color: #666;
    margin-top: 10rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.book-summary {
    display: -webkit-box;
    font-size: 26rpx;
    color: #999;
    margin-top: 10rpx;
    line-height: 140%;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}
