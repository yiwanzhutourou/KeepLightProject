.setting-container-with-icon {
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
}

.setting-icon {
    width: 50rpx;
    height: 50rpx;
}

.detail-container-with-icon {
    width: 430rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 20rpx;
}

.subinfo-container {
    width: 180rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.title-with-icon {
    font-size: 32rpx;
    color: #333;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.sub-info {
    font-size: 25rpx;
    color: #666;
    margin-right: 20rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.unread-text {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    border-radius: 50%;
    background: #E64340;
    color: #fff;
    font-size: 20rpx;
    margin-right: 20rpx;
    box-shadow: 0 0 1rpx #aaa;
}
