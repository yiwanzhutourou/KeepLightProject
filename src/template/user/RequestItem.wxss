.request-common-container {
    background-color: #fff;
    border: 1rpx solid #bbb;
    border-radius: 15rpx;
    -webkit-box-shadow: 0rpx 0rpx 10rpx 0rpx #eee;
    -moz-box-shadow: 0rpx 0rpx 10px 0rpx #eee;
    box-shadow: 0rpx 0rpx 10rpx 0rpx #eee;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.request-container {
    height: 180rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
}

.maininfo-container {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.subinfo-container {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.detail-container {
    width: 380rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 15rpx;
    margin-right: 15rpx;
}

.request-title {
    font-size: 25rpx;
    color: rgba(0, 0, 0, 0.54);
}

.request-detail {
    font-size: 35rpx;
    color: rgba(0, 0, 0, 0.87);
    margin-top: 10rpx;
}

.request-date {
    font-size: 25rpx;
    color: rgba(0, 0, 0, 0.54);
    margin-top: 10rpx;
}

.book-pic {
    width: 120rpx;
    height: 120rpx;
}

.dealed-text {
    font-size: 25rpx;
    color: rgba(0, 150, 136, 1);
}

.declined-text {
    font-size: 25rpx;
    color: rgba(0, 0, 0, 0.54);
}

.action-text {
    font-size: 25rpx;
    color: rgba(0, 0, 0, 0.54);
}

.action-container {
    height: 60rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    margin-left: 25rpx;
    margin-right: 25rpx;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    border-top: #999 dashed 1rpx;
}
