.book-user-container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.book-user-avater {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.book-user-detail-container {
    width: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.book-user-nickname {
    width: 100%;
    font-size: 30rpx;
    color: #333;
    margin-top: 20rpx;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.book-user-address {
    width: 100%;
    font-size: 24rpx;
    color: #666;
    margin-top: 10rpx;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.book-user-distance {
    width: 100%;
    font-size: 20rpx;
    color: #666;
    margin-top: 16rpx;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
