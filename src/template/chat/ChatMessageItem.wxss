.chat-loading-container {
    height: 80rpx;
    background: #DCEAF7;
    border: 1rpx solid #BFE3EE;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 20rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    float: right;
}

.chat-loading {
    display: block;
    width: 100%;
    height: 60rpx;
    padding: 16rpx 0;
    text-align: center;
}

.chat-loading::before,
.chat-loading .chat-dot,
.chat-loading::after {
  content: '';
  display: inline-block;
  color: transparent;
  width: 10rpx;
  height: 10rpx;
  border-radius: 100%;
  overflow: hidden;
  margin: 0 6rpx;
}

.chat-loading::before,
.chat-loading .chat-dot,
.chat-loading::after {
  -webkit-animation: chat-refresh-loader 1.4s infinite ease-in-out;
  animation: chat-refresh-loader 1.4s infinite ease-in-out;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}

.chat-loading::before {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}
.chat-loading .chat-dot {
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}

@-webkit-keyframes chat-refresh-loader {
  0%, 80%, 100% { background-color: #6AA0F0; }
  40% { background-color: #BFE3EE; }
}

@keyframes chat-refresh-loader {
  0%, 80%, 100% { background-color: #6AA0F0; }
  40% { background-color: #BFE3EE; }
}


