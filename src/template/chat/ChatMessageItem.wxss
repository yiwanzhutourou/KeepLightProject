/** self request **/
.self-request-container {
    height: 240rpx;
    width: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.self-request-wrapper {
    height: 200rpx;
    width: 70%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    border: 1rpx solid #efefef;
    border-radius: 8rpx;
    margin-right: 30rpx;
}

.book-cover {
    height: 160rpx;
    width: 120rpx;
    margin-right: 20rpx;
}

.request-detail-container {
    display: flex;
    flex-direction: column;
    margin-right: 30rpx;
    margin-left: 20rpx;
}

.request-title {
    font-size: 25rpx;
    color: #666;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.request-detail {
    font-size: 38rpx;
    color: #333;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-top: 10rpx;
    margin-bottom: 20rpx;
}

.request-date {
    font-size: 25rpx;
    color: #666;
}

