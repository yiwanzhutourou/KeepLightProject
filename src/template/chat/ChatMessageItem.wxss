/** left message **/
.left-message-container {
    width: 80%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    float: left;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.left-avatar {
    width: 76rpx;
    height: 76rpx;
    border-radius: 50%;
    border: 2rpx solid #eee;
    margin-left: 30rpx;
}

.left-message-wrapper {
    width: 480rpx;
}

.left-message {
    color: #666;
    font-size: 30rpx;
    line-height: 36rpx;
    background: #fff;
    border: 1rpx solid #eee;
    border-radius: 15rpx;
    display: flex;
    align-items: center;
    padding: 20rpx;
    margin-left: 20rpx;
    float: left;
}

/** right message **/
