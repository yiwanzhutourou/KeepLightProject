/** left message **/
.chat-time-container {
    width: 100%;
    height: 36rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 30rpx;
    padding-bottom: 20rpx;
}

.chat-time {
    height: 100%;
    font-size: 20rpx;
    color: #fff;
    background: #ddd;
    padding-left: 10rpx;
    padding-right: 10rpx;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.left-message-container {
    width: 80%;
