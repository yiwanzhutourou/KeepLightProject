.lib-container {
    width: 100%;
    height: 140rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.lib-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-left: 30rpx;
}

.lib-detail-container {
    width: 570rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    margin-left: 20rpx;
    margin-right: 30rpx;
}

.lib-name {
    font-size: 30rpx;
    color: #333;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.lib-address {
    font-size: 24rpx;
    color: #666;
    margin-top: 20rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}