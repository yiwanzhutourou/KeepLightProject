<template name="lib-item">
    <view class="common-container">
        <view class="lib-container"
            data-id="{{item.id}}"
            bindtap="obLibTap">
            <image wx:if="{{item.avatar}}"
                class="lib-avatar" src="{{item.avatar}}" />
            <view class="lib-detail-container">
                <text class="lib-name">{{item.name}}</text>
                <text wx:if="{{item.addressText}}"
                    class="lib-address">{{item.addressText}}</text>
            </view>
        </view>
    </view>
</template>