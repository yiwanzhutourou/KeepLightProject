.book-container {
    height: 150rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 25rpx;
    padding-right: 25rpx;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
}

.book-detail-container {
    width: 480rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 15rpx;
    margin-right: 15rpx;
}

.book-title {
    font-size: 35rpx;
    color: rgba(0, 0, 0, 0.87);
}

.book-author {
    font-size: 25rpx;
    color: rgba(0, 0, 0, 0.54);
    margin-top: 10rpx;
}

.book-publisher {
    font-size: 25rpx;
    color: rgba(0, 0, 0, 0.54);
    margin-top: 5rpx;
}

.add-book-button {
    font-size: 25rpx;
    color: rgba(0, 150, 136, 1);
}

.add-book-button-hover {
    font-size: 25rpx;
    color: rgba(0, 150, 136, 0.6);
}

.added-book-text {
    font-size: 25rpx;
    color: rgba(0, 0, 0, 0.38);
}

.book-pic {
    width: 120rpx;
    height: 120rpx;
}

.book-item-divider {
    width: 100%;
    height: 1rpx;
    background: #eee;
}