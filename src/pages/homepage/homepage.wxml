<!--pages/homepage/homepage.wxml-->
<view class="container">
    <image class="blur" src="{{userInfo.avatarUrl}}" mode="aspectFill" />
    <view class="dark" />
    <view class="user-info-container">
        <image wx:if="{{userInfo.avatarUrl}}" class="user-avatar" src="{{userInfo.avatarUrl}}" />
        <view class="user-text-container">
            <text wx:if="{{userInfo.nickName}}" class="user-nickname">{{userInfo.nickName}}</text>
            <text wx:if="{{userIntro !== ''}}" class="user-intro">{{userIntro}}</text>
        </view>
    </view>
    <view class="detail-container">
        <view class="list-container">
            <block wx:for="{{bookList}}" wx:key="id">
                <import src="../../template/book/BookItem.wxml" />
                <template is="book-item"
                    data="{{item, isHomePage, isCurrentUser}}" />
            </block>
        </view>
    </view>
</view>
