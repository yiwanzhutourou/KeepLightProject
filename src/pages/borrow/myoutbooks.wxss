@import "../../template/borrow/GeneralBorrowBookItem.wxss";

.detail-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.list-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.list-filter-container {
    width: 94%;
    display: flex;
    display: flex;
    flex-flow: row wrap;
    align-content: flex-start;
    justify-content: flex-start;
}

.filter-item {
    height: 36rpx;
    color: #6AA0F0;
    font-size: 30rpx;
    line-height: 36rpx;
    background: #DCEAF7;
    border: 1rpx solid #BFE3EE;
    border-radius: 16rpx;
    padding: 10rpx 20rpx;
    margin: 20rpx 10rpx 0 10rpx;
}

.filter-item-dark {
    height: 36rpx;
    color: #666;
    font-size: 30rpx;
    line-height: 36rpx;
    background: #fff;
    border: 1rpx solid #eee;
    border-radius: 16rpx;
    padding: 10rpx 20rpx;
    margin: 20rpx 10rpx 0 10rpx;
}
