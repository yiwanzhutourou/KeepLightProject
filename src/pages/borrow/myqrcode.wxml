<view class="my-qr-container">
    <view class="my-qr-wrapper">
        <view class="my-qr-user-container">
            <image class="my-qr-avatar" src="{{avatar}}" />
            <view class="my-qr-nickname">{{nickname}}</view>
        </view>
        <view class="img-box">
            <canvas hidden="{{canvasHidden}}"
                style="width:660rpx;height:660rpx;background:#fff;"
                canvas-id="mycanvas" />
        </view>
        <view class="my-qr-code-hint">扫描二维码向我借书</view>
    </view>
</view>
<view hidden="{{maskHidden}}" class="mask"></view>
<view class="canvas-box"></view>