.all-detail-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 2;
}

.blur {
    /* filter: blur(10rpx);
    -webkit-filter: blur(10rpx); */
    width: 100%;
    height: 350rpx;
    z-index: 0;
    position: absolute;
    top: 0;
}

.dark {
    background: rgba(0, 0, 0, 0.5);
    width: 100%;
    height: 350rpx;
    z-index: 1;
    position: absolute;
    top: 0;
}

.title-container {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    height: 370rpx;
    padding-left: 50rpx;
    padding-right: 50rpx;
    padding-bottom: 20rpx;
}

.book-cover {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    width: 200rpx;
    height: 300rpx;
}

.title-text-container {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    width: 410rpx;
    margin-left: 40rpx;
    padding-bottom: 60rpx;
}

.book-title {
    display: block;
    font-size: 45rpx;
    color: #fff;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.book-author {
    display: -webkit-box;
    font-size: 30rpx;
    color: #fff;
    margin-top: 20rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.book-publisher {
    display: block;
    font-size: 30rpx;
    color: #fff;
    margin-top: 10rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
}

.subinfo-button-container {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    padding-bottom: 20rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.subinfo-container {
    width: 490rpx;
}

.button-container {
    width: 200rpx;
}

.borrow-book-button {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    color: #f8b62d;
    background: #fff;
    border: 1rpx solid #f8b62d;
}

.borrow-book-button-hover {
    color: #fff;
    background: #f8b62d;
}

.borrow-book-button::after {
    display: none;
}

.added-button {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    color: #aaa;
    background: #fff;
    border: 2rpx solid #aaa;
}

.added-button::after {
    display: none;
}

.subinfo-text {
    display: block;
    font-size: 30rpx;
    color: #666;
    margin-top: 5rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.detail-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
}

.detail-title {
    font-size: 25rpx;
    color: #999;
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-bottom: 10rpx;
}

.detail-container-wrapper {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.detail-arrow {
    width: 10rpx;
    margin-right: 30rpx;
}

.detail-content {
    width: 660rpx;
    font-size: 30rpx;
    color: #333;
    line-height: 160%;
    padding-left: 30rpx;
    padding-right: 20rpx;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    text-overflow: ellipsis;
}

.space-holder {
    height: 100rpx;
}

.show-detail-dialog {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    width: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
}

.show-detial-scroller {
    width: 80%;
    background: #fff;
    border: 1rpx solid #eee;
    border-radius: 8rpx;
    -webkit-box-shadow: 0rpx 0rpx 4rpx 0rpx #eee;
    -moz-box-shadow: 0rpx 0rpx 4px 0rpx #eee;
    box-shadow: 0rpx 0rpx 4rpx 0rpx #eee;
    padding: 30rpx 50rpx;
    white-space: nowrap;
}

.show-detail-container {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: nowrap;
}

.show-detail-dialog-content {
    font-size: 30rpx;
    color: #333;
    line-height: 160%;
}
