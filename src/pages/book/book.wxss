.detail-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    position: relative;
    z-index: 2;
}

.blur {
    filter: blur(10rpx);
    -webkit-filter: blur(10rpx);
    width: 100%;
    height: 350rpx;
    z-index: 0;
    position: absolute;
    top: 0;
}

.dark {
    background: rgba(0, 0, 0, 0.3);
    width: 100%;
    height: 350rpx;
    z-index: 1;
    position: absolute;
    top: 0;
}

.title-container {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    height: 370rpx;
    padding-left: 50rpx;
    padding-right: 50rpx;
    padding-bottom: 20rpx;
}

.book-cover {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    width: 200rpx;
    height: 300rpx;
}

.title-text-container {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    width: 450rpx;
    margin-left: 40rpx;
    padding-bottom: 60rpx;
}

.book-title {
    display: block;
    font-size: 45rpx;
    color: #fff;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.book-author {
    display: -webkit-box;
    font-size: 30rpx;
    color: #fff;
    margin-top: 20rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.book-publisher {
    display: block;
    font-size: 30rpx;
    color: #fff;
    margin-top: 10rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
}

.subinfo-container {
    width: 100%;
    padding-bottom: 20rpx;
    padding-left: 50rpx;
    padding-right: 50rpx;
}

.subinfo-text {
    display: block;
    font-size: 30rpx;
    color: rgba(0, 0, 0, 0.54);
    margin-top: 5rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.detail-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
}

.detail-title {
    font-size: 25rpx;
    color: rgba(0, 0, 0, 0.37);
    padding-left: 50rpx;
    padding-right: 50rpx;
    padding-bottom: 20rpx;
}

.detail-content {
    font-size: 30rpx;
    color: rgba(0, 0, 0, 0.87);
    line-height: 150%;
    padding-left: 50rpx;
    padding-right: 50rpx;
}

.space-holder {
    height: 100rpx;
}
