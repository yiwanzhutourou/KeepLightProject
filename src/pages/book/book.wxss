@import "../../template/user/BookUserItem.wxss";
@import "../../template/widget/LoadMore.wxss";

.all-detail-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 2;
    padding-bottom: 100rpx;
}

.blur {
    /* filter: blur(10rpx);
    -webkit-filter: blur(10rpx); */
    width: 100%;
    height: 350rpx;
    z-index: 0;
    position: absolute;
    top: 0;
}

.dark {
    background: rgba(0, 0, 0, 0.5);
    width: 100%;
    height: 350rpx;
    z-index: 1;
    position: absolute;
    top: 0;
}

.title-container {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    height: 370rpx;
    padding-left: 50rpx;
    padding-right: 50rpx;
    padding-bottom: 20rpx;
}

.book-cover {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    width: 200rpx;
    height: 300rpx;
}

.title-text-container {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    width: 410rpx;
    margin-left: 40rpx;
    padding-bottom: 60rpx;
}

.book-title {
    display: block;
    font-size: 45rpx;
    color: #fff;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.book-author {
    display: -webkit-box;
    font-size: 30rpx;
    color: #fff;
    margin-top: 20rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.book-publisher {
    display: block;
    font-size: 30rpx;
    color: #fff;
    margin-top: 10rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
}

.subinfo-button-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    padding-bottom: 20rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.subinfo-container {
    width: 450rpx;
}

.subinfo-text {
    display: block;
    font-size: 30rpx;
    color: #666;
    margin-top: 5rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.book-button-container {
    width: 240rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-end;
}

.add-book-button {
    font-size: 32rpx;
    color: #f8b62d;
    padding: 6rpx 10rpx;
    border: 1rpx solid #f8b62d;
    border-radius: 8rpx;
}

.add-book-button-hover {
    color: #fff;
    background: #f8b62d;
}

.remove-book-button {
    font-size: 32rpx;
    color: #999;
    padding: 6rpx 10rpx;
    border: 1rpx solid #999;
    border-radius: 8rpx;
}

.remove-book-button-hover {
    color: #fff;
    background: #999;
}

.detail-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
}

.detail-title {
    font-size: 30rpx;
    color: #555;
    padding: 20rpx 30rpx;
}

.detail-container-wrapper {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.detail-arrow {
    width: 10rpx;
    margin-right: 30rpx;
}

.detail-content {
    width: 660rpx;
    font-size: 36rpx;
    color: #333;
    line-height: 160%;
    padding-left: 30rpx;
    padding-right: 20rpx;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 10;
    overflow: hidden;
    text-overflow: ellipsis;
}

.discover-loading-more-container {
    width: 100%;
}

.user-list-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-top: 30rpx;
}

.user-list-scroller {
    width: 100%;
    height: 320rpx;
    white-space: nowrap;
}

.user-scroller-wrapper {
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: nowrap;
}

.book-user-wrapper {
    width: 240rpx;
    height: 280rpx;
    display: inline-block;
    margin-left: 10rpx;
    margin-right: 10rpx;
    background: #fff;
    border: 1rpx solid #eee;
}

.user-space-wrapper {
    display: inline-block;
}

.user-space-holder {
    height: 244rpx;
    width: 30rpx;
}
