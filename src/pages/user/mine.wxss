@import "../../template/user/SettingItem.wxss";
@import "../../template/user/SettingItemWithIcon.wxss";

.detail-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
}

.list-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user-info-container {
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background: #fff;
}

.my-login-button {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    color: #fff;
    background: #f8b62d;
    border-radius: 0;
}

.my-login-button::after{
    border: none;
}

.user-avatar {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    border: 2rpx solid #eee;
    margin-left: 30rpx;
}

.qr-code-image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 60rpx;
}

.user-text-container {
    width: 410rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-left: 40rpx;
    margin-right: 40rpx;
}

.user-nickname {
    font-size: 36rpx;
    color: #333;
}

.show-my-room {
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
}

.follow-container {
    width: 100%;
    height: 120rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background: #fff;
}

.follow-sub-container {
    width: 50%;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-right: 1rpx solid #eee;
}

.follow-sub-container2 {
    width: 50%;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.follow-number-text {
    font-size: 34rpx;
    color: #333;
}

.follow-content-text {
    font-size: 20rpx;
    color: #666;
}

.thick-divider {
    height: 40rpx;
    width: 100%;
    background: #fafafa;
}

.contact-container {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
}

.contact-button {
    width: 620rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-left: 20rpx;
    font-size: 32rpx;
    color: #333;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    background: #fff;
    padding: 0;
}

.contact-button::after {
    display: none;
}

.contact-icon {
    width: 46rpx;
    height: 46rpx;
    margin-left: 30rpx;
}

.contact-arrow {
    width: 10rpx;
    margin-right: 30rpx;
}