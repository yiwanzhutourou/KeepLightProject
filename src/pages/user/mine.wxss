@import "../../template/user/SettingItem.wxss";
@import "../../template/user/SettingItemWithIcon.wxss";

.detail-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
}

.list-container {
    width: 100%;
    height: calc(100% - 400rpx);
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 400rpx;
    z-index: 0;
}

.blur {
    width: 100%;
    filter: blur(50rpx);
    -webkit-filter: blur(50rpx);
    height: 400rpx;
    z-index: 1;
    position: absolute;
    top: 0;
}

.dark {
    width: 100%;
    background: rgba(0, 0, 0, 0.3);
    width: 100%;
    height: 400rpx;
    z-index: 2;
    position: absolute;
    top: 0;
}

.user-info-container {
    width: 100%;
    height: 400rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 3;
    position: absolute;
    top: 0;
}

.user-avatar {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    border: 2rpx solid #fff;
    margin-top: 70rpx;
}

.user-text-container {
    width: 100%;
    height: 150rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.user-nickname {
    font-size: 40rpx;
    color: #fafafa;
    font-weight: 900;
    margin-top: 30rpx;
}
