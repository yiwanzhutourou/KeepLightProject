@import "../../template/user/SettingItem.wxss";
@import "../../template/user/SettingItemWithIcon.wxss";

.detail-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
}

.list-container {
    width: 100%;
    height: calc(100% - 300rpx);
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 300rpx;
    z-index: 0;
}

.blur {
    width: 100%;
    /* filter: blur(10rpx);
    -webkit-filter: blur(10rpx); */
    height: 300rpx;
    z-index: 1;
    position: absolute;
    top: 0;
}

.dark {
    width: 100%;
    background: rgba(0, 0, 0, 0.5);
    width: 100%;
    height: 300rpx;
    z-index: 2;
    position: absolute;
    top: 0;
}

.user-info-container {
    width: 100%;
    height: 300rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    z-index: 3;
    position: absolute;
    top: 0;
}

.user-avatar {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    border: 4rpx solid #fff;
    margin-left: 50rpx;
}

.user-text-container {
    width: 460rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-left: 40rpx;
    margin-right: 50rpx;
}

.user-nick-container {
    height: 80rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.border-between {
    width: 480rpx;
    height: 1rpx;
    background: #fafafa;
}

.user-follow-container {
    height: 30rpx;
    display: flex;
    flex-direction: row;
    margin-top: 30rpx;
}

.following-text {
    font-size: 24rpx;
    color: #fafafa;
}

.follower-text {
    font-size: 24rpx;
    color: #fafafa;
    margin-left: 20rpx;
}

.user-nickname {
    font-size: 40rpx;
    color: #fafafa;
}

.show-my-room {
    height: 32rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    color: #fafafa;
    border: 1rpx solid #fafafa;
    border-radius: 8rpx;
    padding-left: 6rpx;
    padding-right: 6rpx;
}
