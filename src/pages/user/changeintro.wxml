<view class="container">
    <form wx:if="{{showUi}}" class="form-container" bindsubmit="formSubmit">
        <view class="textarea-container">
            <textarea class="intro-textarea"
                name="intro_input"
                value="{{intro}}"
                placeholder="请简短介绍您的书房里的书，最多可以输入70个字"
                placeholder-class="intro-textarea-placeholder"
                maxlength="70"
                auto-focus
            />
        </view>
        <button class="submit-button" formType="submit">
            保存
        </button>
    </form>
</view>