.form {
    width: 100%;
}

.form-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.lib-setting-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.lib-setting-section-container {
    width: 94%;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.lib-setting-section-container2 {
    width: 94%;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.lib-setting-title-container {
    width: 16%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.lib-setting-title {
    font-size: 30rpx;
    color: #999;
}

.lib-setting-right-container {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.lib-setting-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.name-input {
    width: 84%;
    font-size: 30rpx;
    color: #444;
    padding: 0;
    margin: 0;
}

.name-input-placeholder {
    font-size: 30rpx;
    color: #aaa;
}

.info-textarea {
    width: 84%;
    height: 400rpx;
    font-size: 30rpx;
    color: #444;
    padding: 0;
    margin: 0;
}

.info-textarea-placeholder {
    font-size: 30rpx;
    color: #aaa;
}

.address-text {
    max-width: 400rpx;
    font-size: 30rpx;
    color: #444;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-right: 20rpx;
}

.submit-button-container {
    width: 100%;
    padding: 20rpx 0;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 0;
    border-top: 1rpx solid #eee;
    background: #fafafa;
}

.submit-button {
    width: 94%;
    background-color: #f8b62d;
    color: #fff;
}

.submit-button-hover {
    background-color: rgba(248, 182, 45, 0.6);
}
