.form {
    width: 100%;
}

.form-container {
    width: 100%;
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.lib-textarea {
    width: 90%;
    height: 200rpx;
    padding: 30rpx;
    font-size: 35rpx;
    color: #666;
}

.lib-textarea-placeholder {
    font-size: 35rpx;
    color: #999;
}

.submit-button {
    width: 90%;
    margin: 30rpx;
    background-color: #f8b62d;
    color: #fff;
}
