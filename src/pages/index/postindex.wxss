.post-container {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.post-wrapper {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.post-button-container {
    width: 240rpx;
    height: 300rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-left: 30rpx;
    margin-right:30rpx;
    border: solid 2rpx #eee;
    border-radius: 8rpx;
    background: #fafafa;
}

.post-button-image-container {
    width: 120rpx;
    height: 120rpx;
    background: #f8b62d;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.post-button-image {
    width: 60rpx;
    height: 60rpx;
}

.post-button-image2 {
    width: 50rpx;
    height: 50rpx;
}

.post-button-container-hover {
    background: #eee;   
}

.post-button-text {
    font-size: 34rpx;
    color: #333;
    margin-top: 40rpx;
}
