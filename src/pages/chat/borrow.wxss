
/** user **/
.user-container {
    height: 160rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.user-title {
    font-size: 26rpx;
    color: #666;
    margin-left: 30rpx;
}

.user-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: 2rpx solid #ddd;
    margin-right: 30rpx;
}

/** book **/
.book-container {
    height: 180rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-left: 25rpx;
    padding-right: 25rpx;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    background: #fafafa;
    border-radius: 16rpx;
}

.book-detail-container {
    width: 480rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 15rpx;
}

.book-title {
    font-size: 35rpx;
    color: #333;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.book-author {
    font-size: 25rpx;
    color: #666;
    margin-top: 10rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.book-publisher {
    font-size: 25rpx;
    color: #666;
    margin-top: 5rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.book-pic {
    width: 120rpx;
    height: 120rpx;
}


/** message **/
.form {
    width: 100%;
}

.form-container {
    width: 100%;
    margin-top: 50rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.message-textarea {
    width: 598rpx;
    height: 200rpx;
    padding: 30rpx;
    font-size: 30rpx;
    color: #666;
    background: #fff;
    border: 1rpx solid #ddd;
    border-radius: 16rpx;
}

.message-textarea-placeholder {
    font-size: 30rpx;
    color: #aaa;
}

.button-container {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 80rpx;
}

.borrow-book-button {
    width: 660rpx;
    background-color: #f8b62d;
    color: #fff;
}

.borrow-book-button-hover {
    background: rgba(248, 182, 45, 0.6);
}
