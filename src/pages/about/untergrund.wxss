.title-contaiber {
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    margin-left: 30rpx;
    display: flex;
    justify-content: flex-start;
}

.title {
    font-size: 25rpx;
    color: #999;
    border-bottom: 4rpx solid #f8b62d;
}

.radio-container {
    width: 100%;
    align-items: center;
    justify-content: flex-start;
}

.radio-group {
    display: flex;
    flex-direction: column;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.radio {
    color: #333;
    font-size: 30rpx;
    margin-bottom: 20rpx;
}

.form {
    width: 100%;
}

.input-container {
    height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-left: 30rpx;
    margin-right: 30rpx;
    border-bottom: 1rpx solid #e6e6e6;
}

.server-button-container {
    width: 100rpx;
}

.server-submit-button {
    font-size: 20rpx;
    color: #fff;
    background-color: #f8b62d;
}

.server-submit-button-hover {
    background-color: rgba(248, 182, 45, 0.6);
}

.server-input {
    width: 500rpx;
    height: 80rpx;
    font-size: 28rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.tips-container {
    width: 100%;
    margin-top: 10rpx;
}

.tips {
    color: #aaa;
    font-size: 25rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
}
