@import "../../template/search/SearchBookItem.wxss";
@import "../../template/search/SearchUserItemBig.wxss";
@import "../../template/widget/LoadMore.wxss";

.container {
    justify-content: flex-start;
    background-color: #fff;
}

.search-bar-container {
    position: fixed;
    z-index: 5;
    width: 100%;
    height: 80rpx;
    background-color: #535354;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: center;
}

.input-container {
    width: 640rpx;
    height: 60rpx;
    background-color: #f2f2f2;
    border-radius: 8rpx;
}

.cancel-text {
    height: 60rpx;
    width: 60rpx;
    font-size: 26rpx;
    color: white;
    margin-left: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.search-bar-input {
    height: 60rpx;
    font-size: 26rpx;
    padding-left: 15rpx;
    padding-right: 25rpx;
}

.search-bar-input-placeholder {
    font-size: 26rpx;
}

.search-content-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.swiper-tab {
    position: fixed;
    z-index: 5;
    top: 80rpx;
    width: 100%;
    border-bottom: 1rpx solid #bbb;
    text-align: center;
    line-height: 60rpx;
    background-color: #eee;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    width: 200rpx;
    color: #999;
}

.on {
    color: #f8b62d;
    border-bottom: 5rpx solid #f8b62d;
}
  
.swiper-box {
    position: fixed;
    top: 148rpx;
    display: block;
    width: 100%;
    overflow: hidden;
}
