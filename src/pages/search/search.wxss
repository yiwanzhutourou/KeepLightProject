@import "../../template/search/SearchBookItem.wxss";
@import "../../template/search/SearchUserItemBig.wxss";
@import "../../template/widget/LoadMore.wxss";

.container {
    justify-content: flex-start;
    background-color: #fff;
}

.search-bar-container {
    position: fixed;
    z-index: 5;
    width: 100%;
    height: 80rpx;
    background-color: #535354;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.search-bar-inner-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    width: 640rpx;
    height: 60rpx;
    background-color: #f2f2f2;
    border-radius: 8rpx;
}

.search-picker {
    width: 100rpx;
    height: 60rpx;
}

.search-picker-container {
    height: 60rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-left: 15rpx;
    padding-right: 15rpx;
    font-size: 26rpx;
    color: rgba(0, 0, 0, 0.87);
    border-right: 1rpx solid #bbb;
}

.input-container {
    width: 540rpx;
    height: 60rpx;
}

.cancel-text {
    height: 60rpx;
    width: 60rpx;
    font-size: 26rpx;
    color: white;
    margin-left: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.search-bar-input {
    height: 60rpx;
    font-size: 26rpx;
    padding-left: 15rpx;
    padding-right: 25rpx;
}

.search-bar-input-placeholder {
    font-size: 26rpx;
}

.search-content-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 80rpx;
}
