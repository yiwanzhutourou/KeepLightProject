.img-container {
    width: 632rpx;
    height: 482rpx;
    margin-top: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fafafa;
    border: 1rpx solid #eee;
    border-radius: 8rpx;
    -webkit-box-shadow: 0rpx 0rpx 4rpx 0rpx #eee;
    -moz-box-shadow: 0rpx 0rpx 4px 0rpx #eee;
    box-shadow: 0rpx 0rpx 4rpx 0rpx #eee;
}

.card-img {
    width: 600rpx;
    height: 450rpx;
}

.title-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    margin-top: 30rpx;
}

.card-title {
    width: 670rpx;
    font-size: 45rpx;
    font-weight: 90;
    color: #333;
    margin-left: 40rpx;
    margin-right: 40rpx;
}

.user-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    margin-top: 20rpx;
}

.user-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: 2rpx solid #eee;
    margin-left: 40rpx;
}

.user-time-container {
    width: 560rpx;
    height: 80rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    margin-left: 20rpx;
}

.user-nickname {
    font-size: 24rpx;
    color: #666;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.card-date {
    font-size: 20rpx;
    color: #999;
    margin-top: 10rpx;
}

.content-container {
    width: 660rpx;
    margin-top: 10rpx;
    margin-bottom: 100rpx;
}

.card-content {
    font-size: 32rpx;
    color: #333;
    line-height: 160%;
}

.bottom-bar-container {
    position: fixed;
    bottom: 0;
    z-index: 10;
    width: 100%;
    height: 80rpx;
    border-top: 1rpx solid #eee;
    background: #fafafa;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.bottom-container {
    width: 249rpx;
    height: 60%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-right: 1rpx solid #eee;
}

.bottom-container-2 {
    width: 250rpx;
    height: 60%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.bottom-icon {
    width: 40rpx;
    height: 40rpx;
}

.bottom-text {
    font-size: 24rpx;
    color: #666;
    margin-left: 16rpx;
}
